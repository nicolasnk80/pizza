			font_size:"20sp"
			size_hint_x:None
			width:"50dp"
		BoxLayout:
			spacing:"5dp"
			BoxLayout:
				size_hint:None, None
				size:"15dp", "15dp"
				Image:
					source:"data/yello_star.png"
			BoxLayout:
				size_hint:None, None
				size:"15dp", "15dp"
				Image:
					source:"data/yello_star.png"
			BoxLayout:
				size_hint:None, None
				size:"15dp", "15dp"
				Image:
					source:"data/yello_star.png"
			BoxLayout:
				size_hint:None, None
				size:"15dp", "15dp"
				Image:
					source:"data/black_star.png"
			BoxLayout:
				size_hint:None, None
				size:"15dp", "15dp"
				Image:
					source:"data/black_star.png"
	BoxLayout:
		size_hint:None, None
		size:"70dp", "40dp"
		Image:
			source:"data/capa.jpg"
